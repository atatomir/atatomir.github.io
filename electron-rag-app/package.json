{
  "name": "local-rag",
  "version": "1.1.0",
  "description": "Local RAG pipeline builder with local LLM and embeddings via Ollama",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "test": "node --test test/rag-engine.test.js",
    "build": "electron-builder --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "mammoth": "^1.6.0",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.localrag.app",
    "productName": "Local RAG",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ]
  }
}
